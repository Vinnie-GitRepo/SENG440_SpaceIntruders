<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Settings">

        <EditTextPreference
            android:id="@+id/username"
            app:key="username"
            app:title="Username"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="notificationswitch"
            app:title="Notifications" />

        <Preference
            android:title="@string/colour_change" >
            <intent
                android:targetPackage="com.example.spaceintruders"
                android:targetClass="com.example.spaceintruders.activities.ColorPickerActivity"
                />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>